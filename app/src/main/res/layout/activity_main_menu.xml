<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="ibtime.ibtimeline.MainMenu">

    <!-- background colour, placeholding atm-->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:background="@color/colorPrimaryDark"
       />

    <!-- title text bar, placeholding atm -->
    <TextView
        android:text="@string/Title"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:id="@+id/TitleBar"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/teal"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button" />

        </LinearLayout>

        <!-- Left hand button -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black_36dp"
            android:id="@+id/imageButton"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="375dp"
            android:background="@color/colorPrimaryDark"
            />

        <!-- Right hand button -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_forward_black_36dp"
            android:id="@+id/imageButton2"
            android:layout_marginLeft="950dp"
            android:layout_marginTop="375dp"
            android:background="@color/colorPrimaryDark"
            />
    </FrameLayout>

</FrameLayout>
